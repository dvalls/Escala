%h1 Assets#new
%p Find me in app/views/Assets/new.html.haml

= simple_form_for(@library_file,:html => {:multipart => true}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :category_id, label: 'Categoria', :collection => Category.all, value_method: :id,
              label_method: :name, as: :radio_buttons
    = f.input :url, as: :file #, :input_html => { :multiple => true }

  .form-actions
    = f.button :submit, :class => 'btn btn-primary'

= link_to 'voltar', categories_path, class: 'btn btn-primary'
