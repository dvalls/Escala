%table.table
  %tr
    %th Video
    %th Descrição
    %th Curso
    %th

  - @videos.each do |video|
    %tr
      %td
        = link_to  video.title, video.url
      %td
        = video.description
      %td
        = video.course.title
      %td
        = link_to 'EDITAR', edit_video_path(video)
        |
        = link_to 'APAGAR', video, :method => :delete, :data => { :confirm => 'Are you sure?' }



= link_to 'novo video', new_video_path, class: 'btn btn-primary'

