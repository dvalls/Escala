.pull-left= link_to image_tag(ENV['LOGO_URL']), member_path

.navbar-header
  %button.navbar-toggle{"data-target" => "#menu", "data-toggle" => "collapse", type: "button"}
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar

#menu.collapse.navbar-collapse
  %nav
    %ul.nav.navbar-nav
      - case session[:user_id]
        - when nil
          %li= link_to t('nav.login'), access_login_path
        - else
          %li= link_to 'home', root_path if admin_logged?
          %li= link_to 'cursos', member_path
          %li= link_to t('nav.courses_online'), member_path if admin_logged?
          %li= link_to t('nav.logout'), access_logout_path


- if @course
  %header
    %h1
      = link_to member_course_path(@course) do
        %span#course-slug= @course.slug
        %span#course-title= @course.title
