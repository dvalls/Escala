= simple_form_for(archive,:html => {:multipart => true}) do |f|
  = f.error_notification

  .form-inputs
    - puts '============================ FORM ===================================='

    = f.input :name
    = f.input :description
    = f.input :category_id, label: 'Categoria', :collection => subcategories, value_method: :id,
              label_method: :name, as: :radio_buttons


    %hr
      %ul.list-unstyled
        = render :partial => 'images/image', :collection => @images, :as => :image

    = link_to 'ADICIONAR Arquivo', new_archive_archives_image_path(asset), :class => 'btn btn-default'

  .form-actions
    = f.button :submit, :class => 'btn btn-primary'

