-#  ESSES LINKS DE PAGINA DEVERAM DIRECIONAR O USUARIO PARA O CONTEUDO DOS BLOCOS DE CADA PAGINA

-if @course.online
  .col-md-10.col-lg-10
    .grid
      .grid-sizer.grid-item.grid-item
        %ul.grid.list-unstyled
          - @pages.each do |page|
            %li.grid-item.text-center.col-lg-3.col-md-3.col-sm-4.col-xs-6
              - if not page.content_blocks.first.nil? and not page.content_blocks.first.contentable.content_videos.first.nil? #prevenir erro quando criarem paginas sem videos, ou sem blocos de conteus
                -#= link_to page.name, member_content_video_path(:id => page.content_blocks.first.contentable.content_videos.first.id, :block_id => page.content_blocks.first.id)
                = link_to member_content_video_path(:id => page.content_blocks.first.contentable.content_videos.first.id, :block_id => page.content_blocks.first.id) do
                  = image_tag page.images.last == nil ? "no_cover_image.gif" :page.images.last

                  -#puts ( 5 == 5 ? "equal!" : "not equal!" )








= javascript_include_tag  "isotope.pkgd.min", "fit-columns", "isotope_config"


