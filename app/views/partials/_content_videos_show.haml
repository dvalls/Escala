- if @course.online
  .embed-responsive.embed-responsive-16by9
    %iframe.embed-responsive-item{:width=>'560', :height=>'315', :margin => '20px',
     :src => @content_video.url, :allowfullscreen => true}
  %h2= @content_video.title
  %p= @content_video.description

- else
  .embed-responsive.embed-responsive-16by9
    %iframe.embed-responsive-item{:width=>'560', :height=>'315', :margin => '20px',
     :src => "https://www.youtube.com/embed/" + @content_video.url, :allowfullscreen => true}
  %h2= @content_video.title
  %p= @content_video.description
