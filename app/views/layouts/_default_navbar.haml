.pull-left= link_to image_tag(ENV['LOGO_URL']), root_path

.navbar-header
  %button.navbar-toggle{"data-target" => "#menu", "data-toggle" => "collapse", type: "button"}
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar

#menu.collapse.navbar-collapse
  %nav
    %ul.nav.navbar-nav
      %li= link_to t('nav.about'), about_path
      %li= link_to t('nav.courses'), courses_path
      %li= link_to t('nav.contact'), contact_path
      %li= link_to 'como aluno', member_path if admin_logged?
      %li= link_to 'como admin', root_path if admin_logged?

      %li
        - case session[:user_id]
          - when nil
            = link_to t('nav.login'), access_login_path
          - else
            = link_to t('nav.logout'), access_logout_path



