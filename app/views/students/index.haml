
%table.table
  %tr
    %th Username
    %th Nome
    %th email
    %th Cursos
    %th
  - @students.each do |student|
    %tr
      %td= student.username
      %td= student.full_name
      %td= student.email
      %td
        - student.courses.each do |course|
          = '#'
          = course.title
      %td
        = link_to 'EDITAR', edit_student_path(student)
        |
        = link_to 'APAGAR', student, :method => :delete, :data => { :confirm => t('views.are_you_sure')}

= link_to 'NOVO ALUNO', new_student_path, class: 'btn btn-primary'

= stylesheet_link_tag "course"
= javascript_include_tag "jquery.lazyload.min", "course"

