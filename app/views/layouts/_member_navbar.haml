
-content_for :navbar do
  .pull-left= link_to image_tag(ENV['LOGO_URL']), member_path

  .navbar-header
    %button.navbar-toggle{"data-target" => "#menu", "data-toggle" => "collapse", type: "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar

  #menu.collapse.navbar-collapse
    %nav
      %ul.nav.navbar-nav
        - case session[:user_id]
          - when nil
            %li
              = link_to t('nav.login'), access_login_path
          - else
            //= link_to session[:user].username, member_student_path(session[:user_id])
            %li
              = link_to 'home', member_path
            %li
              = link_to t('nav.logout'), access_logout_path

