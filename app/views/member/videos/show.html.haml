= render partial: 'layouts/member_navbar'

%header
  %h1
    = @course.slug
    %span#course-title= @course.title

.row
  .col-lg-2
    = render 'member/sidebar'
  .col-lg-10
    %h2= @content_video.title
    %p= @content_video.description
    .embed-responsive.embed-responsive-16by9
      %iframe.embed-responsive-item{:width=>'560', :height=>'315', :src => "https://www.youtube.com/embed/" + @content_video.url, :allowfullscreen => true}

= hidden_field_tag :course_id, @course.id


