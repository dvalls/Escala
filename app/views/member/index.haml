
= render partial: 'layouts/member_navbar'

.row
  .col-lg-3
    = render partial: 'member/students/show'
  .col-lg-9
    %ul#Grid.row
      - @courses.each do |course|
        %li.mix.col-lg-4.col-md-4.col-sm-6{:class => "", "data-age" => course.year.year}
          = link_to member_course_path(course) do
            .lighter= image_tag course.cover_image.url,  :class => 'img-responsive'
            .course-name
              = '- ' + course.title
              = ' (N√ÉO PUBLICADO)' if not course.publish?

= stylesheet_link_tag "course"
= javascript_include_tag "jquery.lazyload.min", "course"
