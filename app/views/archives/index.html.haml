
- content_for :archive_files do

  - case @subcategory
    - when []
      .col-lg-9.col-md-9
        %p Selecione uma categoria, plz
        = image_tag 'materiais.jpg'
    - else
      .col-lg-9.col-md-9
        %h3
          %strong
            CATEGORIA:
            = @subcategory.name
      - @subcategory.archives.each do |archive|
        .col-xs-6.col-sm-3.col-md-3
          = link_to '#' do
            = image_tag archive.images.first.url.url(:thumb), class: 'thumbnail'
            = archive.name
          = link_to 'X', archive, :method => :delete, :data => { :confirm => t('views.are_you_sure')}

.row
  .col-lg-3
    %ul
      %h3 Categorias
      - @categories.each do |category|
        %li
          = link_to category.name, archives_path(:subcategory => category)
          - if category.subcategories.count > 0
            %ul
              - category.subcategories.each do |subcategory|
                %li
                  = link_to subcategory.name, archives_path(:subcategory => subcategory)
  = yield :archive_files


= link_to( 'novo material', new_archive_path, class: 'btn btn-primary') #if signed_in?
= link_to 'massivo', massive_up_new_path, class: 'btn btn-primary'
= link_to 'voltar', root_path, class: 'btn btn-primary'


