  .navbar-header
    %button.navbar-toggle{"data-target" => "#menu", "data-toggle" => "collapse", type: "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar

  #menu.collapse.navbar-collapse
    %nav
      %ul.nav.navbar-nav
        %li
        %li
        %li
        %li
          - case session[:user_id]
            - when nil
              = link_to 'Login', access_login_path
            - else
              = link_to session[:user].name, my_course_student_path(session[:user_id])
              %li
                = link_to 'home', my_course_index_path
              %li
                = link_to 'logout', root_url

