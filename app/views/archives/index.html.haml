
- content_for :archive_files do
  - case @subcategory
    - when []
      %p Selecione uma categoria, plz
      = image_tag 'materiais.jpg'
    - else
      %h3
        %strong
          CATEGORIA:
          = @subcategory.name
      %table.table
        %tr
          %th Url (verificação)
          %th Nome
          %th Descrição
          %th Tipo
          %th Thumb
          %th

        - @subcategory.archives.each do |archive|
          %tr
            %td= archive.url.url
            %td= archive.name
            %td= archive.description
            %td= archive.category.group
            %td
              - archive.images.each do |image|
                = image.title
                = image_tag image.url.url(:thumb)

            %td
              = link_to 'EDITAR', edit_archive_path(archive)
              |
              = link_to 'APAGAR', archive, :method => :delete, :data => { :confirm => t('views.are_you_sure')}



.row
  .col-lg-3
    - @categories.each do |category|
      - case
        - when category.archives.count > 0
          = link_to category.name, archives_path(:subcategory => category)
        - else
          %li
            = category.name
            - category.subcategories.each do |subcategory|
              %li
                = link_to subcategory.name, archives_path(:subcategory => subcategory)
      %br/
      %br/
  .col-lg-9
    = yield :archive_files


= link_to( 'Novo material', new_archive_path, class: 'btn btn-primary') #if signed_in?
= link_to 'massivo', massive_up_new_path, class: 'btn btn-primary'
= link_to 'voltar', root_path, class: 'btn btn-primary'


