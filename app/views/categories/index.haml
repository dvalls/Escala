%h3 Grupos
= render partial: 'content_library_groups/index'


%h3 Categorias
%table.table
  %tr
    %th NOME
    %th Parent
    %th


  - @categories.each do |category|
    %tr
      %td= category.name
      %td= category.parent_name
      %td
        = link_to 'EDITAR', edit_category_path(category)
        |
        = link_to 'APAGAR', category, :method => :delete, :data => { :confirm => t('views.are_you_sure')}

%br

= link_to 'NOVA CATEGORIA', new_category_path, :class => 'btn btn-primary'
= link_to 'voltar', root_path
